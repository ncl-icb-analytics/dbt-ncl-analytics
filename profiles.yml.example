# Example profiles.yml for local development
# Copy this to profiles.yml and modify with your credentials
# Run scripts/setup-local-profiles.sh (or .bat on Windows) to prevent Git from tracking your changes

ncl_analytics:
  target: dev
  outputs:
    dev:
      type: snowflake
      account: 'your-account.region'  # e.g., abc123.eu-west-1
      user: 'YOUR_USERNAME'
      authenticator: externalbrowser  # SSO/browser authentication
      role: DBT_ADMIN
      database: MODELLING
      schema: DBT_DEV
      warehouse: WH_NCL_ENGINEERING_XS
      threads: 16
      client_session_keep_alive: false
    
    prod:
      type: snowflake
      account: 'your-account.region'
      user: 'YOUR_USERNAME'
      authenticator: externalbrowser  # SSO/browser authentication
      role: DBT_ADMIN
      database: MODELLING
      schema: DBT_PROD
      warehouse: WH_NCL_ENGINEERING_XS
      threads: 16
      client_session_keep_alive: false