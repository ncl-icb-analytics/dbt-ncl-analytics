#!/bin/sh
# Pre-commit hook to prevent accidental commits of credential files

# Check if any credential files are being committed
CREDENTIAL_FILES=".env .env.local .env.*.local"

for file in $CREDENTIAL_FILES; do
    if git diff --cached --name-only | grep -q "^${file}$"; then
        echo "⚠️  ERROR: You're about to commit credential file: ${file}"
        echo ""
        echo "This file should never be committed as it contains sensitive information."
        echo "Commit aborted."
        exit 1
    fi
done