[sqlfluff]
dialect = snowflake
templater = dbt
# Use 'core' rules as a sensible baseline
rules = core

[sqlfluff:templater:dbt]
project_dir = .

# Layout rules configuration
[sqlfluff:rules:layout.long_lines]
max_line_length = 200

# Indentation
[sqlfluff:rules:layout.indent]
indent_unit = space
tab_space_size = 4

# Capitalisation - enforce uppercase keywords
[sqlfluff:rules:capitalisation.keywords]
capitalisation_policy = upper

# Capitalisation - enforce lowercase identifiers  
[sqlfluff:rules:capitalisation.identifiers]
capitalisation_policy = lower

# Capitalisation - enforce lowercase function names
[sqlfluff:rules:capitalisation.functions]
capitalisation_policy = lower

# Trailing commas in SELECT
[sqlfluff:rules:convention.select_trailing_comma]
select_clause_trailing_comma = forbid
